{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "isolatedModules": true,

    // To have svelte warnings/errors correct position
    "sourceMap": true,

    // Prevent type errors
    "types": ["svelte"],

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "baseUrl": "."
  },
  "include": ["src/**/*.ts", "src/**/*.svelte"]
}
